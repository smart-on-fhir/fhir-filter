{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist/lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
}

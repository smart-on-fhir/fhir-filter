{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "noImplicitUseStrict": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
